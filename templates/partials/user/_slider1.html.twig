<div class="content">
    <div class="tit_account">
        <img src="{{ asset('assets/img/blockicon.svg') }}">
        <h4>{{ 'My announcements'|trans }}</h4>
    </div>
{% if jobs %}
    <div class="owl-carousel owl-theme" id="slider_one">
        {% for job in jobs %}
            <slide>
                <div class="box_account">
                    <div class="box_account_content">
                        <h4>{{ job.name }}</h4>
                        <div class="box_person_information">
                            <div class="person_information_city">
                                <div class="city_icon">
                                    <img src="{{ asset('assets/img/city_map.svg') }}" class="lazyLoad isLoaded">
                                    <p class="city_box_account">{{ job.city }}, {{ job.district }}</p>
                                </div>
                                <p>Начать: <i class="data_box_account">{{ job.startDate|date("d.m.Y") }}</i></p>
                                <p>Опыт работы:
                                    <i class="data_box_account">{% include 'partials/misc/_experience.html.twig' %}</i>
                                </p>
                            </div>
                            <div class="person_information_pay">
                                {% if job.payment %}
                                    <p>{{ 'Payment'|trans }}: <i class="data_box_account">{{ job.payment }}</i></p>
                                {% endif %}

                                {% if job.age %}
                                <p>{{ 'Age'|trans }}: <i class="data_box_account">{{ job.age }}</i></p>
                                {% endif %}
                                {% if job.education %}
                                    <p>{{ 'Education'|trans }}: <i class="data_box_account">{% include 'partials/misc/_education.html.twig' %}</i></p>
                                {% endif %}
                            </div>
                        </div>
                        <div class="person_description">
                            <p>{{ job.description }}</p>
                        </div>
                        <div class="box_vacancies">
                            <div class="box_logo">
                                <img src="{{ asset('assets/img/ava_person_account.png') }}">
                            </div>
                            <div class="name_vacancies">
                                <p class="name_vacancies_text">Вакансия от частного лица</p>
                                <p>{{ job.owner.firstName }} {{ job.owner.lastName }}</p>
                            </div>
                        </div>
                        <div class="btn_box_account">
                            <button class="btn_box_account_one">Подробнее</button>
                            <button class="btn_box_account_two"><a href="{{ path('app_edit_job', { id: job.id}) }}">Редактировать</a></button>
                        </div>
                    </div>
                </div>
            </slide>
        {% endfor %}
    </div>
{% else %}
    <p>У вас пока нет объявлений</p>
{% endif %}
</div>