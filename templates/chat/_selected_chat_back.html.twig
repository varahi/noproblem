
{% block body %}

    {% for siteUser in allUsers %}
        <a href="{{ path('app_selected_chat', { id:  siteUser.id}) }}" class="">{{ siteUser }}</a> <br />
    {% endfor %}

    <div class="row">
        <div id="sidebar" class="col-sm-3">
            <ul id="users-list" class="col-lg-12 col-md-12 col-sm-12 rounded message-list">

                {# Fetching users' list from the UserRepo to show here #}

            </ul>
        </div>
        <div id="main" class="col-sm-9">
            <section class="jumbotron">
                <div class="container">
                    <div class="row">
                        <ul id="messages-list" class="col-lg-12 col-md-12 col-sm-12 rounded messages-list"></ul>
                    </div>
                    <div class="row" id="data-pre">
                        <div class="col-lg-9 col-md-9 col-sm-9">
                            <textarea id="form-message" class="form-control" rows="3" placeholder="Type your message"></textarea>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <input type="button" id="form-submit" value="Send" class="btn btn-lg btn-block btn-outline-primary"/>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {% include 'partials/scripts/_chat_my.html.twig' %}
{% endblock %}

